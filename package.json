{
  "name": "deletemytweets",
  "version": "1.3.25",
  "description": "Date-filtered tweet deletion tool for X (Twitter). Safely delete old tweets while protecting recent ones.",
  "main": "electron-main.js",
  "bin": {
    "deletemytweets": "index.js"
  },
  "scripts": {
    "start": "electron electron-main.js",
    "cli": "node index.js",
    "cleanup": "node index.js",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "build:cli": "pkg . --targets node18-win-x64 --output DeleteMyTweets.exe"
  },
  "pkg": {
    "assets": [],
    "outputPath": "dist"
  },
  "keywords": [
    "twitter",
    "x",
    "cleanup",
    "delete-tweets",
    "tweet-deletion",
    "automation",
    "playwright"
  ],
  "author": "Kepners",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1",
    "playwright": "^1.40.0",
    "stripe": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kepners/deletemytweets.git"
  },
  "bugs": {
    "url": "https://github.com/Kepners/deletemytweets/issues"
  },
  "homepage": "https://github.com/Kepners/deletemytweets#readme",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.choppedonions.deletemytweets",
    "productName": "Delete My Tweets",
    "asar": true,
    "asarUnpack": [
      "index.js"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "app.html",
      "index.js",
      "package.json",
      "icon.ico",
      "icon.icns"
    ]
  }
}
